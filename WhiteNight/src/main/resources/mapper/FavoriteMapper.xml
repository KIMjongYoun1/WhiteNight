<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="WhiteNight.dao.FavoriteDAO">

    <!-- 즐겨찾기 추가 -->
    <insert id="insertFavorite">
        INSERT INTO wn_favorites (favorite_id, user_id, quote_id)
        VALUES (#{favoriteid}, #{userid}, #{quoteid});
    </insert>

    <!-- 즐겨찾기 삭제 -->
    <delete id="deleteFavorite">
        DELETE FROM wn_favorites WHERE favorite_id = #{favoriteid};
    </delete>

    <!-- 특정 사용자 즐겨찾기 조회 -->
    <select id="selectFavoritesByUser" resultType="WhiteNight.VO.FavoriteVO">
        SELECT * FROM wn_favorites WHERE user_id = #{userid};
    </select>
</mapper>
